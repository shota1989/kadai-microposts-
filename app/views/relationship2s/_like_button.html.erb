<% if current_user.liking?(post) %>
  <%= form_for(current_user.relationship2s.find_by(micropost_id: post.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, post.id %>
    <%= f.submit 'Unlike', class: 'btn btn-default btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.relationship2s.build) do |f| %>
    <%= hidden_field_tag :micropost_id, post.id %>
    <%= f.submit 'Like', class: 'btn btn-default btn-xs' %>
  <% end %>
<% end %>
